// Jenkinsfile Simplificado - VersiÃ³n bÃ¡sica
pipeline {
    agent any
    // If you configure Tools in Jenkins (Manage Jenkins -> Global Tool Configuration)
    // you can enable the block below to have Jenkins auto-install and put tools on PATH
    // tools {
    //     maven 'Maven'   // Name must match exactly the Maven installation name in Jenkins
    //     jdk 'JDK-17'     // Name must match exactly the JDK installation name in Jenkins
    // }
    environment {
        PROJECT_DIR = 'testing_jenkins/CirculosEIntersecciones'
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'
    }
    stages {
        // Jenkinsfile Simplificado - Linux-friendly
        pipeline {
            agent any

            environment {
                PROJECT_DIR = 'testing_jenkins/CirculosEIntersecciones'
                MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'
            }

            stages {
                stage('Checkout') {
                    steps {
                        echo 'Obteniendo cÃ³digo...'
                        checkout scm
                    }
                }

                stage('Build & Test') {
                    steps {
                        echo 'Compilando y ejecutando tests...'
                        dir("${PROJECT_DIR}") {
                            script {
                                if (isUnix()) {
                                    sh 'mvn clean test'
                                } else {
                                    bat 'mvn clean test'
                                }
                            }
                        }
                    }
                }

                stage('Package') {
                    steps {
                        echo 'Generando JAR...'
                        dir("${PROJECT_DIR}") {
                            script {
                                if (isUnix()) {
                                    sh 'mvn package -DskipTests'
                                } else {
                                    bat 'mvn package -DskipTests'
                                }
                            }
                        }
                    }
                }
            }

            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
                }
                success {
                    echo 'âœ“ Build exitoso'
                }
                failure {
                    echo 'âœ— Build fallÃ³'
                }
            }
        }
    }
    post {
        always {
            echo 'ðŸš§ Pipeline finalizado.'
        }
    }
}

