// Jenkinsfile Simplificado - Versión básica
pipeline {
    agent any
    
    tools {
        maven 'Maven'
        jdk 'JDK-17'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Obteniendo código...'
                checkout scm
            }
        }
        
        stage('Build & Test') {
            steps {
                echo 'Compilando y ejecutando tests...'
                dir('testing_jenkins/Círculos e intersecciones/CirculosEIntersecciones') {
                    bat 'mvn clean test'
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'Generando JAR...'
                dir('testing_jenkins/Círculos e intersecciones/CirculosEIntersecciones') {
                    bat 'mvn package -DskipTests'
                }
            }
        }
    }
    
    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
        success {
            echo '✓ Build exitoso'
        }
        failure {
            echo '✗ Build falló'
        }
    }
}
